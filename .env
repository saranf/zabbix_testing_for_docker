#############################################
# 포트 설정 (원하는 포트로 변경 가능)
#############################################

# HTTP/HTTPS 포트
HTTP_PORT=80
HTTPS_PORT=443

# Zabbix Server 포트 (Agent 통신용)
ZABBIX_SERVER_PORT=10847

# SSH 포트 (방화벽 설정용)
SSH_PORT=22

#############################################
# PostgreSQL Database Configuration
#############################################

POSTGRES_USER=zabbix
POSTGRES_PASSWORD=zabbix_secure_password_2024
POSTGRES_DB=zabbix

# ⚠️ 보안 경고: 설치 후 반드시 POSTGRES_PASSWORD를 변경하세요!
# 변경 후: docker-compose down && docker-compose up -d

#############################################
# Zabbix Server Configuration
#############################################

ZBX_SERVER_NAME=Zabbix Monitoring Server

#############################################
# Timezone
#############################################

TIMEZONE=Asia/Seoul

